  <script>
    // Sample inventory data (replace with real images & details)
    const vehicles = [
      {id:1, brand:'BYD', model:'eT3', type:'EV', year:2023, price:54000, mileage:38000, fuel:'Electric', img:'https://picsum.photos/seed/byd/800/420', coe:'2032-05'},
      {id:2, brand:'Maxus', model:'ED5', type:'EV', year:2022, price:48000, mileage:45000, fuel:'Electric', img:'https://picsum.photos/seed/maxus/800/420', coe:'2030-11'},
      {id:3, brand:'Toyota', model:'Hiace', type:'Van', year:2018, price:32000, mileage:120000, fuel:'Diesel', img:'https://picsum.photos/seed/hiace/800/420', coe:'2028-07'},
      {id:4, brand:'Nissan', model:'NV200', type:'Van', year:2019, price:28000, mileage:98000, fuel:'Petrol', img:'https://picsum.photos/seed/nv200/800/420', coe:'2029-03'},
      {id:5, brand:'Opel', model:'Vivaro-e', type:'EV', year:2021, price:46000, mileage:60000, fuel:'Electric', img:'https://picsum.photos/seed/vivaro/800/420', coe:'2031-09'},
      {id:6, brand:'Mitsubishi', model:'Fuso', type:'Truck', year:2016, price:42000, mileage:180000, fuel:'Diesel', img:'https://picsum.photos/seed/fuso/800/420', coe:'2026-12'},
      {id:7, brand:'Isuzu', model:'NPR', type:'Truck', year:2017, price:39000, mileage:160000, fuel:'Diesel', img:'https://picsum.photos/seed/isuzu/800/420', coe:'2027-04'}
    ];

    // Populate brand filter
    const brandSelect = document.getElementById('filterBrand');
    const brands = Array.from(new Set(vehicles.map(v=>v.brand))).sort();
    brands.forEach(b=>{ const o=document.createElement('option'); o.value=b; o.textContent=b; brandSelect.appendChild(o) });

    const inventoryGrid = document.getElementById('inventoryGrid');
    const count = document.getElementById('count');

    function renderList(list){
      inventoryGrid.innerHTML='';
      list.forEach(v=>{
        const card=document.createElement('div'); card.className='vehicle card';
        card.innerHTML = `
          <img src="${v.img}" alt="${v.model}" />
          <div>
            <div style="display:flex; justify-content:space-between; align-items:center">
              <h3>${v.brand} ${v.model}</h3>
              <div class="price">S$${numberWithCommas(v.price)}</div>
            </div>
            <div class="meta">${v.year} • ${numberWithCommas(v.mileage)} km • ${v.fuel} • ${v.type}</div>
            <div class="actions">
              <button class="btn" onclick="openModal(${v.id})">View</button>
              <a class="btn" href="https://wa.me/6591234567?text=Hi%20I%27m%20interested%20in%20the%20${encodeURIComponent(v.brand+' '+v.model)}%20(${v.id})" target="_blank">WhatsApp</a>
            </div>
          </div>
        `;
        inventoryGrid.appendChild(card);
      });
      count.textContent = list.length;
    }

    function numberWithCommas(x){ return x.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',') }

    // Initial render
    renderList(vehicles);

    // Filters
    document.getElementById('filterType').addEventListener('change', applyFilters);
    document.getElementById('filterBrand').addEventListener('change', applyFilters);
    document.getElementById('sortBy').addEventListener('change', applyFilters);
    document.getElementById('searchBtn').addEventListener('click', applyFilters);
    document.getElementById('clearFilters').addEventListener('click', ()=>{
      document.getElementById('filterType').value='all';
      document.getElementById('filterBrand').value='all';
      document.getElementById('sortBy').value='new';
      document.getElementById('priceMin').value='';
      document.getElementById('priceMax').value='';
      document.getElementById('searchText').value='';
      renderList(vehicles);
    });

    function applyFilters(){
      let list = vehicles.slice();
      const type = document.getElementById('filterType').value;
      const brand = document.getElementById('filterBrand').value;
      const sort = document.getElementById('sortBy').value;
      const search = document.getElementById('searchText').value.trim().toLowerCase();
      const minP = parseInt(document.getElementById('priceMin').value) || 0;
      const maxP = parseInt(document.getElementById('priceMax').value) || Infinity;

      if(type !== 'all') list = list.filter(v=>v.type === type);
      if(brand !== 'all') list = list.filter(v=>v.brand === brand);
      if(search) list = list.filter(v=> (v.brand+' '+v.model+' '+v.year+' '+v.fuel).toLowerCase().includes(search) );
      list = list.filter(v=> v.price >= minP && v.price <= maxP);

      if(sort === 'price_low') list.sort((a,b)=>a.price-b.price);
      else if(sort === 'price_high') list.sort((a,b)=>b.price-a.price);
      else list.sort((a,b)=>b.year - a.year);

      renderList(list);
    }

    // Modal logic
    function openModal(id){
      const v = vehicles.find(x=>x.id===id);
      if(!v) return;
      document.getElementById('modalTitle').textContent = `${v.brand} ${v.model}`;
      document.getElementById('modalImg').src = v.img;
      document.getElementById('modalModel').textContent = `${v.brand} ${v.model}`;
      document.getElementById('modalPrice').textContent = `S$${numberWithCommas(v.price)}`;
      document.getElementById('modalMeta').textContent = `${v.year} • ${numberWithCommas(v.mileage)} km • ${v.fuel} • ${v.type}`;
      document.getElementById('modalDesc').textContent = `Well-maintained ${v.type.toLowerCase()} — ${v.brand} ${v.model} (${v.year}). COE expiry: ${v.coe}. Contact us for inspection, warranty and fleet purchase.`;
      document.getElementById('whatsappLink').href = `https://wa.me/6591234567?text=Hi%20I%27m%20interested%20in%20the%20${encodeURIComponent(v.brand+' '+v.model)}%20(${v.id})`;
      document.getElementById('whatsappLink').target = '_blank';
      document.getElementById('modal').style.display = 'flex';
    }
    function closeModal(){ document.getElementById('modal').style.display = 'none'; }

    // Close modal on backdrop click
    document.getElementById('modal').addEventListener('click', (e)=>{ if(e.target.id==='modal') closeModal(); });

    // Contact form (simple mailto fallback)
    document.getElementById('contactForm').addEventListener('submit', function(e){
      e.preventDefault();
      const name = document.getElementById('name').value.trim();
      const phone = document.getElementById('phone').value.trim();
      const email = document.getElementById('emailField').value.trim();
      const message = document.getElementById('message').value.trim();
      if(!name || !phone){ alert('Please provide your name and phone.'); return; }
      const subject = encodeURIComponent(`Enquiry from website — ${name}`);
      const body = encodeURIComponent(`Name: ${name}%0APhone: ${phone}%0AEmail: ${email}%0AMessage:%0A${message}`);
      // mailto fallback
      window.location.href = `mailto:sales@76cv.sg?subject=${subject}&body=${body}`;
    });

  </script>
</body>
